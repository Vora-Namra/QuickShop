<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Username Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Username Value -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFA500"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Email Value -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFA500"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Address Input -->
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="text"
            android:textColorHint="#FFA500"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background" />

        <!-- Phone Input -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="#FFA500"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/edit_text_background" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#FFA500"
            android:layout_marginBottom="16dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFA500"
            android:text="Update Profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help/Support"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <!-- Email Support ImageView -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_email_support"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gmail"
            android:contentDescription="Email Support"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
             />

        <!-- Call Support ImageView -->
        <ImageView
            android:id="@+id/iv_call_support"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone"
        android:contentDescription="Call Support"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
            android:layout_marginLeft="30dp"
             />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
